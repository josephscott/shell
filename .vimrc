set nocompatible

syntax on
filetype on

" A place to keep undo's
set undofile
set undolevels=1000
set undoreload=10000
set undodir=~/.vim/undo

" how to treat files
set encoding=utf-8
set fileformat=unix
set tabstop=4
set shiftwidth=4
set backspace=indent,eol,start
set noautoindent
set nosmartindent
set nocindent

" display
set ruler
